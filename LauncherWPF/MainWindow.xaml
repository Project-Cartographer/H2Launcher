<Window x:Name="main_form" x:Class="LauncherWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LauncherWPF"
        mc:Ignorable="d"       
        Title="" Height="450" Width="750" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" WindowStyle="None" AllowsTransparency="True" MouseDown="main_form_MouseDown">
    <Window.Background>
        <ImageBrush ImageSource="Resources/Images/launcher background.png"/>
    </Window.Background>
    <Window.Resources>
        <Storyboard x:Key="sbShowLoginMenu" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,-140,0,0" To="0,0,0,0" DecelerationRatio=".9" Duration="0:0:1"/>
        </Storyboard>
        <Storyboard x:Key="sbHideLoginMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="0,-140,0,0" AccelerationRatio=".9" Duration="0:0:1"/>
        </Storyboard>
        <Storyboard x:Key="sbShowSettingsMenu" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,-220,0" To="0,0,0,0" DecelerationRatio=".9" Duration="0:0:1"/>
        </Storyboard>
        <Storyboard x:Key="sbHideSettingsMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="0,0,-220,0" AccelerationRatio=".9" Duration="0:0:1"/>
        </Storyboard>
        <Storyboard x:Key="sbShowUpdateMenu" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="750,0,-350,-250" To="400,0,0,0" DecelerationRatio=".9" Duration="0:0:1"/>
        </Storyboard>
        <Storyboard x:Key="sbHideUpdateMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="400,0,0,0" To="750,0,-350,-250" AccelerationRatio=".9" Duration="0:0:1"/>
        </Storyboard>
    </Window.Resources>
    <Grid x:Name="main_grid" Margin=" 0,0,0,0" Focusable="True">
        <StackPanel Panel.ZIndex="2" Name="LoginPanel" Orientation="Vertical" Height="140" Width="300" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,-140,0,0" Background="{StaticResource PanelBackground}">
            <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Height="140" Width="300">
                <Label x:Name="pLogin" Content="LOGIN" Style ="{StaticResource PanelTitleStyle}" Width="80" Height="36"/>
                <Button x:Name="lsUsername" Content="Username :" Style="{StaticResource sPanelButtonStyle}" Margin="20,55,0,0"/>
                <TextBox x:Name="lsUser" Style="{StaticResource TextBoxStyle}" Text="Player 1" Margin="128,57,0,0" Width="162"/>
                <Button x:Name="lsPassword" Content="Password :" Style="{StaticResource sPanelButtonStyle}" Margin="20,84,0,0"/>
                <TextBox x:Name="lsPass" Style="{StaticResource TextBoxStyle}" Text="########" Margin="128,86,0,0" Width="162"/>
                <Button x:Name="lsRememberMe" Content="Remember Me" Style="{StaticResource sPanelButtonStyle}" FontSize="16" Margin="204,113,0,0"/>
            </Grid>
        </StackPanel>
        <StackPanel Panel.ZIndex="2" Name="SettingPanel" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,-220,0" Background="{StaticResource PanelBackground}" Width="220">
            <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Height="450" Width="220">
                <Label x:Name="pSettings" Content="SETTINGS" Style ="{StaticResource PanelTitleStyle}" Height="34" Width="123"/>
                <Button x:Name="psFullScreen" Content="Full Screen" Style="{StaticResource sPanelButtonStyle}" Margin="35,58,84,365"/>
                <Button x:Name="psResolution" Content="Resolution" Style="{StaticResource sPanelButtonStyle}" Margin="35,87,0,0"/>
                <TextBox x:Name="psResX" Style="{StaticResource TextBoxStyle}" Text="1920" FontSize="18" Margin="65,110,0,0" PreviewTextInput="Numeric_PreviewTextInput" DataObject.Pasting ="NumericPasteCheck"/>
                <TextBox x:Name="psResY" Style="{StaticResource TextBoxStyle}" Text="1080" FontSize="18" Margin="135,110,0,0" PreviewTextInput="Numeric_PreviewTextInput" DataObject.Pasting ="NumericPasteCheck"/>
                <Button x:Name="psResx" Content="X :" Style="{StaticResource sPanelButtonStyle}" FontSize="18" Margin="45,110,0,0" HorizontalAlignment="Left"/>
                <Button x:Name="psResy" Content="Y :" Style="{StaticResource sPanelButtonStyle}" FontSize="18" Margin="115,110,0,0" HorizontalAlignment="Left"/>
                <Button x:Name="psVsync" Content="Vertical Sync" Style="{StaticResource sPanelButtonStyle}" Margin="35,135,0,0"/>
                <Button x:Name="psSound" Content="Game Sound" Style="{StaticResource sPanelButtonStyle}" Margin="35,164,0,0"/>
                <Button x:Name="psMonitor" Content="Default Display :" Style ="{StaticResource sPanelButtonStyle}" Margin="35,193,0,233"/>
                <TextBox x:Name="psMonitorNumber" Style="{StaticResource TextBoxStyle}" Text="2" FontSize="22" Margin="173,193,0,0" PreviewTextInput="Numeric_PreviewTextInput" DataObject.Pasting ="NumericPasteCheck"/>
                <Button x:Name="psIntroMovies" Content="Startup Credits" Style="{StaticResource sPanelButtonStyle}" Margin="35,222,0,0"/>
                <Separator Background="{StaticResource TitleColor}" VerticalAlignment="Center" Height="4" Margin="10,251,20,195"/>
                <Button x:Name="psDebug" Content="Debug Mode" Style="{StaticResource sPanelButtonStyle}" FontSize="16" Margin="136,423,0,0"/>
                <Button x:Name="psFPS" Content="Frame Limiter :" Style="{StaticResource sPanelButtonStyle}" Margin="35,260,0,0"/>
                <TextBox x:Name="psFPSLimit" Style="{StaticResource TextBoxStyle}" Text="60" FontSize="22" Margin="163,260,0,0" PreviewTextInput="Numeric_PreviewTextInput" DataObject.Pasting ="NumericPasteCheck"/>
                <Button x:Name="psPorts" Content="Base Port :" Style="{StaticResource sPanelButtonStyle}" Margin="35,289,0,0"/>
                <TextBox x:Name="psPortNumber" Style="{StaticResource TextBoxStyle}" Text="1000" FontSize="22" Margin="127,289,0,0" PreviewTextInput="Numeric_PreviewTextInput" DataObject.Pasting ="NumericPasteCheck"/>
                <Button x:Name="psVoice" Content="Voice Chat" Style="{StaticResource sPanelButtonStyle}" Margin="35,318,0,0"/>
                <Button x:Name="psMaps" Content="Map Downloading" Style="{StaticResource sPanelButtonStyle}" Margin="35,347,0,0"/>
            </Grid>
        </StackPanel>
        <StackPanel Panel.ZIndex="2" Name="UpdatePanel" Orientation="Vertical" Width="350" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="750,0,-350,-250" Height="250" Background="{StaticResource PanelBackground}">
            <Grid Name="UpdateGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Height="250" Width="350">
                <Label x:Name="pUpdate" Content="UPDATES" Style ="{StaticResource PanelTitleStyle}" Height="34" Width="118"/>
                <Separator Background="{StaticResource TitleColor}" VerticalAlignment="Center" Height="4" Margin="10,49,163,197"/>
                <RichTextBox x:Name="richTextBox" Style="{StaticResource RichTextBoxStyle}" Height="182" Margin="30,58,0,0" VerticalAlignment="Top" Width="310">
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="Checking for updates.... Updates found"/>
                        </Paragraph>
                        <Paragraph>
                            <Run Text="Downloading updates..... Download complete"/>
                        </Paragraph>
                        <Paragraph>
                            <Run Text="Verifying file integrity... Verification complete"/>
                        </Paragraph>
                        <Paragraph>
                            <Run Text="Game updated complete"/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </Grid>
        </StackPanel>
        <Grid x:Name="title_grid" Margin="125,84,125,227" HorizontalAlignment="Center">
            <Image x:Name="h2_logo" Height="60" VerticalAlignment="Top" Loaded ="Image_Loaded" RenderTransformOrigin="0,0" Margin="10,10,10,0">
                <Image.OpacityMask>
                    <ImageBrush ImageSource="Resources/Images/h2logo.png"/>
                </Image.OpacityMask>
            </Image>
            <Label x:Name="title" Content="PROJECT CARTOGRAPHER" Style ="{StaticResource PanelTitleStyle}" FontSize="26" Margin="80,75,80,25" HorizontalAlignment="Center"/>
        </Grid>
        <Grid x:Name="menu_grid" Margin="125,223,125,74" HorizontalAlignment="Center">
            <Button x:Name="LoginButton" Content="LOGIN" Style ="{StaticResource MenuButtonStyle}" Margin="212,10,212,0" Click="LoginButton_Click"/>
            <Button x:Name="RegisterButton" Content="REGISTER" Style ="{StaticResource MenuButtonStyle}" Margin="189,44,189,0" Click="RegisterButton_Click"/>
            <Button x:Name="SettingsButton" Content="SETTINGS" Style ="{StaticResource MenuButtonStyle}" Margin="189,78,189,0" Click="SettingsButton_Click"/>
            <Button x:Name="UpdateButton" Content="CHECK UPDATES" Style ="{StaticResource MenuButtonStyle}" Margin="152,112,152,0" Click="UpdateButton_Click"/>
        </Grid>
        <Grid Height="34" Margin="672,10,10,0" VerticalAlignment="Top" Width="68">
            <Button x:Name="control_close" Content="X" Style ="{StaticResource ControlButtonStyle}" Margin="34,0,0,0" VerticalAlignment="Top" Click="control_close_Click"/>
            <Button x:Name="control_minimize" Content="—" Style ="{StaticResource ControlButtonStyle}" Margin="0,0,34,0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="control_minimize_Click"/>
        </Grid>
    </Grid>
</Window>
