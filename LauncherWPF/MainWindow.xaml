<Window x:Name="main_form" x:Class="LauncherWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LauncherWPF"
        mc:Ignorable="d"       
        Title="" Height="450" Width="750" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" WindowStyle="None" AllowsTransparency="True" MouseDown="main_form_MouseDown">
    <Window.Background>
        <ImageBrush ImageSource="Resources/Images/launcher background.png"/>
    </Window.Background>
    <Window.Resources>
        <Storyboard x:Key="sbShowLoginMenu" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,-140,0,0" To="0,0,0,0" DecelerationRatio=".9" Duration="0:0:1"/>
        </Storyboard>
        <Storyboard x:Key="sbHideLoginMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="0,-140,0,0" AccelerationRatio=".9" Duration="0:0:1"/>
        </Storyboard>
        <Storyboard x:Key="sbShowSettingsMenu" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,-220,0" To="0,0,0,0" DecelerationRatio=".9" Duration="0:0:1"/>
        </Storyboard>
        <Storyboard x:Key="sbHideSettingsMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="0,0,-220,0" AccelerationRatio=".9" Duration="0:0:1"/>
        </Storyboard>
        <Storyboard x:Key="sbShowUpdateMenu" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="750,0,-350,-250" To="450,0,0,0" DecelerationRatio=".9" Duration="0:0:1"/>
        </Storyboard>
        <Storyboard x:Key="sbHideUpdateMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="450,0,0,0" To="750,0,-350,-250" AccelerationRatio=".9" Duration="0:0:1"/>
        </Storyboard>
    </Window.Resources>
    <Grid x:Name="main_grid" Margin=" 0,0,0,0">
        <StackPanel Panel.ZIndex="2" Name="LoginPanel" Orientation="Vertical" Height="140" Width="300" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,-140,0,0" Background="{StaticResource PanelBackground}">
            <Label x:Name="pLogin" Content="LOGIN" Style ="{StaticResource HandelGothic}" FontSize="24" Foreground="{StaticResource TitleColor}" Width="80" Height="36" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        </StackPanel>
        <StackPanel Panel.ZIndex="2" Name="SettingPanel" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,-220,0" Background="{StaticResource PanelBackground}" Width="220">
            <Label x:Name="pSettings" Content="SETTINGS" Style ="{StaticResource HandelGothic}" FontSize="24" Foreground="{StaticResource TitleColor}" Margin="10,10,0,0" FontWeight="Regular" HorizontalAlignment="Left" VerticalAlignment="Top" Height="34" Width="123"/>
        </StackPanel>
        <StackPanel Panel.ZIndex="2" Name="UpdatePanel" Orientation="Vertical" Width="350" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="750,0,-350,-250" Height="250" Background="{StaticResource PanelBackground}">
            <Label x:Name="pUpdate" Content="UPDATES" Style ="{StaticResource HandelGothic}" FontSize="24" Foreground="{StaticResource TitleColor}" Height="34" Width="118" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        </StackPanel>
        <Grid x:Name="title_grid" Margin="125,84,125,227" HorizontalAlignment="Center">
            <Image x:Name="h2_logo" Height="60" VerticalAlignment="Top" Loaded ="Image_Loaded" RenderTransformOrigin="0,0" Margin="10,10,10,0">
                <Image.OpacityMask>
                    <ImageBrush ImageSource="Resources/Images/h2logo.png"/>
                </Image.OpacityMask>
            </Image>
            <Label x:Name="title" Content="PROJECT CARTOGRAPHER" Style ="{StaticResource HandelGothic}" FontSize="26" Foreground="{StaticResource TitleColor}" Margin="80,75,80,25" FontWeight="Regular" HorizontalAlignment="Center"/>
        </Grid>
        <Grid x:Name="menu_grid" Margin="125,223,125,74" HorizontalAlignment="Center">
            <Button x:Name="menu_item_1" Content="LOGIN" Style ="{StaticResource MenuButtonStyle}" FontSize="24" Margin="212,10,212,0" VerticalAlignment="Top" Height="34" Background="{x:Null}" BorderBrush="{x:Null}" Click="LoginButton_Click" HorizontalAlignment="Center" />
            <Button x:Name="menu_item_2" Content="REGISTER" Style ="{StaticResource MenuButtonStyle}" FontSize="24" Margin="189,44,189,0" VerticalAlignment="Top" Height="34" Background="{x:Null}" BorderBrush="{x:Null}" Click="RegisterButton_Click" HorizontalAlignment="Center"/>
            <Button x:Name="menu_item_3" Content="SETTINGS" Style ="{StaticResource MenuButtonStyle}" FontSize="24" Margin="189,78,189,0" VerticalAlignment="Top" Height="34" Background="{x:Null}" BorderBrush="{x:Null}" Click="SettingsButton_Click" HorizontalAlignment="Center"/>
            <Button x:Name="menu_item_4" Content="CHECK UPDATES" Style ="{StaticResource MenuButtonStyle}" FontSize="24" Margin="152,112,152,0" VerticalAlignment="Top" Height="34" Background="{x:Null}" BorderBrush="{x:Null}" Click="UpdateButton_Click" HorizontalAlignment="Center"/>
        </Grid>
        <Grid Height="34" Margin="672,10,10,0" VerticalAlignment="Top" Width="68">
            <Button x:Name="control_close" Content="X" Style ="{StaticResource ControlButtonStyle}" FontSize="28" BorderBrush="{x:Null}" Height="34" VerticalAlignment="Top" Margin="34,0,0,0" Width="34" Click="control_close_Click"/>
            <Button x:Name="control_minimize" Content="—" Style ="{StaticResource ControlButtonStyle}" FontSize="28" Margin="0,0,34,0" BorderBrush="{x:Null}" Height="34" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="34" Click="control_minimize_Click"/>
        </Grid>
    </Grid>
</Window>
